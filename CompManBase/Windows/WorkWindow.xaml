<Window x:Class="CompManBase.Windows.WorkWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CompManBase.Windows"
        xmlns:wm="clr-namespace:CompManBase.WinModels"
        mc:Ignorable="d"
        Title="Поиск новой работы" Height="450" Width="500" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Loaded="Window_Loaded" ShowInTaskbar="False" Background="#FFF7B8F2">
    <Window.Resources>
    </Window.Resources>
    <Grid x:Name="WorkWindowPanel">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Button x:Name="ButtonWork0" Margin="5" Grid.Row="0" IsEnabled="{Binding MayDoItWork0}" Click="ButtonWork0_Click">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Должность:" Margin="0,0,5,0"/>
                    <TextBlock Text="{Binding WorkNames[0].Name}" Grid.Column="1" FontWeight="Bold"/>
                    <TextBlock Text="Зарплата:" Grid.Row="1" HorizontalAlignment="Right" Margin="0,0,5,0"/>
                    <Label Content="{Binding WorkNames[0].Salary}" Grid.Column="1" ContentStringFormat="{}{0} руб./день" Grid.Row="1" Margin="-5,-5,-5,-5" FontWeight="Bold"/>
                </Grid>
            </Button>
            <Button x:Name="ButtonWork1" Margin="5" Grid.Row="1" IsEnabled="{Binding MayDoItWork1}" Click="ButtonWork1_Click">
                <Grid>
